<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tenis"
    android:gravity="center"
    android:background="#E2583E"
    android:padding="30dp">

    <RelativeLayout
        android:id="@+id/bloco1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/placarSet1"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/menosTime1Btn"
            android:layout_below="@id/time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#712c1f"
            android:text="Desfazer"
            android:textColor="#fff"
            android:textSize="10sp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/pontuacao1"
            android:text="2"
            android:layout_centerHorizontal="true"
            android:textSize="100sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/time1"
            android:layout_below="@id/pontuacao1"
            android:text="Time1"
            android:layout_centerHorizontal="true"
            android:textSize="34sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:text="x"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="100sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/zerarBtn"
            android:layout_width="wrap_content"
            android:text="ZERAR"
            android:background="#712c1f"
            android:textColor="#fff"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bloco2"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/menosTime2Btn"
            android:layout_below="@id/time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Desfazer"
            android:textSize="10sp"
            android:textColor="#fff"
            android:background="#712c1f"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/placarSet2"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/pontuacao2"
            android:text="2"
            android:layout_centerHorizontal="true"
            android:textSize="100sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/time2"
            android:layout_below="@id/pontuacao2"
            android:text="Time2"
            android:layout_centerHorizontal="true"
            android:textSize="34sp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>